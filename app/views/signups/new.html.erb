<section class='headline'>
    <div class='row'>
      <div class='small-12 columns'>
        <h1>Get a plan</h1>
       </div>
    </div>
  </section>
<section class='main-page'>

  <div class='introduction'>
    <div class='row'>
      <div class='small-12 large-7 large-centered columns'>
        <h3>LET'S GET STARTED!</h3>
      </div>
    </div>

    <div class='row'>
      <div class='small-12 large-7 large-centered columns'>
        <p class='signups'>All we need is a plan name and your postcode.</p>
        <p class='signups'>Plans remain anonymous, and we only use your postcode to find a plan template that best suits your area.</p>
       </div>
    </div>
  </div>

    <%= form_for @signup do |f| %>

    <% if @signup.errors.any? %>
      <div class='row'>
        <div class="small-12 large-7 large-centered columns">
          <div data-alert class='alert-box'>
            <%= "Oops! '" + @signup.errors.full_messages.join("' and '") + "'" %>
            <a href="#" class="close">&times;</a>
          </div>
        </div>
      </div>
    <% end %>

    <div class='row'>
      <div class="small-12 large-7 large-centered columns">
      <fieldset>
        <%= f.text_field :plan_name, placeholder: "Plan Name", class: 'large-element' %>
        <%= f.text_field :postcode, placeholder: "Household Postcode", class: 'large-element' %>
      </fieldset>
      </div>
    </div>

    <div class='introduction'>
      <div class='row'>
        <div class='small-12 large-7 large-centered columns'>
          <h3>OPTIONAL INFORMATION</h3>
          <p class='signups'>You don't have to, but if you like, answer any or all of these questions to help us provide more relevant content in your plan.</p>
          <p class='signups'>Do you..</p>
        </div>
      </div>
    </div>

    <div class='row'>
      <div class="small-11 large-6 small-centered large-centered columns questions">
        <div class="small-8 small-offset-3 large-7 large-offset-3 columns content-svg" id='live-alone'>
          <label for="signup_alone"><%= check_box_tag "signup[alone]" %>live alone?</label>
        </div>
      </div>
    </div>

    <div class='row'>
      <div class="small-11 large-6 small-centered large-centered columns questions">
        <div class="small-8 small-offset-3 large-7 large-offset-3 columns content-svg" id='with-children'>
          <label for="signup_children"><%= check_box_tag "signup[children]" %>live with children?</label>
        </div>
      </div>
    </div>

    <div class='row'>
      <div class="small-11 large-6 small-centered large-centered columns questions">
        <div class="small-8 small-offset-3 large-7 large-offset-3 columns content-svg" id='with-pets'>
          <label for="signup_pets"><%= check_box_tag "signup[pets]" %>live with pets?</label>
        </div>
      </div>
    </div>

